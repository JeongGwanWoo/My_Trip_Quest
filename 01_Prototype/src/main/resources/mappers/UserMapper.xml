<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.tripquest.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.ssafy.tripquest.domain.User">
        <id property="userId" column="user_id"/>
        <result property="email" column="email"/>
        <result property="nickname" column="nickname"/>
        <result property="pointBalance" column="point_balance"/>
        <result property="profileImage" column="profile_image"/>
        <result property="characterCustomization" column="character_customization"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <update id="updateUserPoint">
        UPDATE users
        SET point_balance = point_balance + #{amount}
        WHERE user_id = #{userId}
    </update>

    <select id="findPointBalanceByUserId" parameterType="long" resultType="int">
        SELECT point_balance
        FROM users
        WHERE user_id = #{userId}
    </select>

    <select id="findById" parameterType="string" resultMap="userResultMap">
        SELECT
            user_id,
            email,
            nickname,
            point_balance,
            profile_image,
            character_customization,
            created_at,
            updated_at
        FROM
            users
        WHERE
            user_id = #{userId}
    </select>

    <update id="updateCharacterCustomization" parameterType="string">
        UPDATE users
        SET character_customization = #{customizationData}
        WHERE user_id = #{userId}
    </update>

    <update id="updateProfileImage" parameterType="string">
        UPDATE users
        SET profile_image = #{profileImage}
        WHERE user_id = #{userId}
    </update>

</mapper>
